{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "/*", "close": "*/", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "(", "close": ")" },
    { "open": "\"", "close": "\"" }
  ],
  "folding": {
    "markers": {
      "start": "\\b(if|loop|function|multi)\\b",
      "end": "\\bend\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^\\s*(if\\b.*\\bthen|.*\\bdo|else|multi|monitor\\s+\\d+)\\s*(//.*)?$",
    "decreaseIndentPattern": "^\\s*(end|else|monitor)\\b"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*(if\\b.*\\bthen|.*\\bdo|else|multi|monitor\\s+\\d+)\\s*(//.*)?$",
      "action": { "indent": "indent" }
    },
    {
      "beforeText": "^\\s*(end)\\s*(//.*)?$",
      "action": { "indent": "none" }
    }
  ],
  "wordPattern": "::?[a-zA-Z_][a-zA-Z0-9_]*|[a-zA-Z_][a-zA-Z0-9_]*"
}
